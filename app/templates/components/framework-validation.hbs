<form {{action "test" on="submit"}}>
	<div class="form-group col-smm-8">
			<label for="">{{formValidationStatus}}</label>
	</div>
	<div class="form-group col-sm-8 {{if errors.title 'has-error'}}">
		<label for="">Title: {{formType}}</label>
		{{input class="form-control" name="inpText" type="text" value=detailObj.title}}
		<span class="help-block">{{errors.title}}</span>
	</div>

	<div class="form-group col-sm-8 {{if errors.email 'has-error'}}">
		<label for="">Email: </label>
		{{input class="form-control" name="email" type="text" value=detailObj.emailId}}
		<span class="help-block">{{errors.email}}</span>
	</div>

	<div class="form-group col-sm-8 {{if errors.phone 'has-error'}}">
		<label for="">Phone: </label>
		{{input class="form-control" name="inpText" type="text" value=detailObj.phone}}
		<span class="help-block">{{errors.phone}}</span>
	</div>

	<div class="form-group col-sm-8 {{if errors.url 'has-error'}}">
		<label for="">Domain URL: </label>
		{{input class="form-control" name="inpText" type="text" value=detailObj.url}}
		<span class="help-block">{{errors.url}}</span>
	</div>

	<div class="form-group col-sm-8">
		<button {{action "checkValue" on="click"}}>Route Action</button>
	</div>
	{{input type="button" class="form-group btn btn-primary col-sm-5" value="Submit" disabled=validationFlag}}
</form>
